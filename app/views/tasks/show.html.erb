<h1 class="my-4"><%= @task.title %></h1>

<p class="alert alert-secondary"><%= @task.details %></p>

<p>
  <% if @task.completed %>
    <i class="fas fa-check-square text-success me-2"></i>
    This task is completed
  <% else %>
    <i class="far fa-square text-muted me-2"></i>
    This task is not completed yet
  <% end %>
</p>

<%= link_to edit_task_path(@task), class: "btn btn-outline-secondary mb-3" do %>
  <i class="fas fa-edit"></i> Edit this task
<% end %>

<%= link_to tasks_path, class: "btn btn-link text-decoration-none" do %>
  <i class="fas fa-undo-alt"></i> Back to list
<% end %>
