<h1 class="my-4">My Tasks</h1>

<ul class="list-group">
  <% @tasks.each do |task| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">

      <% if task.completed %>
        <i class="fas fa-check-square text-success"></i>
      <% else %>
        <i class="far fa-square text-muted"></i>
      <% end %>

      <%= link_to task.title, task_path(task), class: "ms-3 text-decoration-none text-dark" %>

      <span class="ms-auto">
        <%= link_to edit_task_path(task), class: "btn btn-sm btn-outline-secondary me-2" do %>
          <i class="fas fa-edit"></i>
        <% end %>

        <%= link_to task_path(task), data: { turbo_method: :delete,
                                             turbo_confirm: "Are you sure?" },
                                             class: "btn btn-sm btn-outline-danger" do %>
          <i class="fas fa-trash"></i>
        <% end %>
      </span>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path, class: "btn btn-primary mt-4" %>
